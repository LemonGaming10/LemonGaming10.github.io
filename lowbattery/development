        <meta charset="utf-8"> 
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&amp;display=swap" rel="stylesheet">
        <style>
            body {
             margin: 0;
             overflow: hidden;
             }
           canvas { 
             padding-left: 0;
             padding-right: 0;
             margin-left: auto;
             margin-right: auto;
             display: block;
             cursor: -webkit-grab; cursor: grab;
             }

